{
  "name": "fair-weather-2",
  "description": "Weather app using Sapper and Svelte.",
  "version": "1.0.2",
  "scripts": {
    "pretest": "npm run test:enable",
    "dev": "sapper dev",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "sapper build",
    "export": "sapper export",
    "start": "node __sapper__/build",
    "e2e": "node ./src/scripts/cyRun.js",
    "e2e:open": "node ./src/scripts/cyOpen.js",
    "test": "npm run unit && npm run e2e",
    "test:enable": "node ./src/scripts/enableTesting.js",
    "test:disable": "node ./src/scripts/disableTesting.js",
    "unit": "mocha",
    "prettier": "prettier --write --plugin-search-dir=. ./**/*.svelte ./**/*.html ./**/*.js ./**/*.spec.js preCommit.js",
    "prettier:spec": "prettier --write",
    "lint": "node_modules/.bin/eslint --ext .js,.svelte src",
    "seed": "node ./src/scripts/seedCityData.js",
    "deploy": "node ./src/scripts/deploy.js",
    "deploy:debug": "node ./src/scripts/deploy.js -d",
    "version": "node ./src/scripts/version.js",
    "version:minor": "node ./src/scripts/version.js --minor",
    "version:major": "node ./src/scripts/version.js --major"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cities.json": "^1.1.5",
    "commander": "^3.0.2",
    "compression": "^1.7.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "node-fetch": "^2.6.0",
    "polka": "next",
    "semver": "^6.3.0",
    "sirv": "^0.4.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "cypress": "^3.4.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "mocha": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.7.0"
  }
}
