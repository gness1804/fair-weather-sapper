{
  "name": "fair-weather-2",
  "description": "Weather app using Sapper and Svelte.",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "npm run build:tailwind && sapper build",
    "export": "sapper export",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "prettier": "prettier --write --plugin-search-dir=. ./**/*.svelte ./**/*.html ./**/*.js ./**/*.spec.js preCommit.js",
    "prettier:spec": "prettier --write",
    "lint": "node_modules/.bin/eslint --ext .js,.svelte src"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "axios": "^0.19.0",
    "compression": "^1.7.1",
    "dotenv": "^8.1.0",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.7.0"
  }
}
